<body>

    
<script>



/* create the canvas and append SVG Group to Body section */ 
var canvas = d3.select("body").append("svg:svg")
		.attr("width",500)
		.attr("height",500)
		.append("g")
		.attr("transform","translate(50,50)");



d3.json("actions.json", function(data){ 

/* creating new object array consisting of players */
var nested_data = d3.nest().key(function (d) { return d.player_name; }).entries(data);

/* create a new array to extract action names by each player  */
var totals= d3.nest().key(function(g) {return g.action_name;}).entries(nested_data);

/* test & debug with console log */
console.log(totals);

/*iterate players array to extract sum of maximum occured total_points */
nested_data.forEach(function(d)
    {
        
/* visualise sum of total points ( maximum occurence ) for each player : needs a reformulate */
canvas.selectAll("rect")
	.data(nested_data)
	.enter()
	.append("rect")
	.attr("width", function (d) { 
		       return d.values.forEach(
                                       function(e){ 
                                       console.log(e.values)});} )
	.attr("height",10)
	.attr("y",function (d,i) {return i;})
	.style("fill", "red")

/* append the player name to the rectengular */
canvas.selectAll("text")
	.data(nested_data)
	.enter()
	.append("text")
	.attr("fill","black")
	.attr("y",function (d,i) {return i*10;})
	.text(function (d){return d.key;})

});

})

 </script>
  </body>
